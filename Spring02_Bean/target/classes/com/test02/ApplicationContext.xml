<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- bean 2개 설정(생성자를 이용한 빈 초기화)
		1.이순신, 서울시 강남구, 010-111-1111
		2.홍길동, 경기도 수원시, 010-222-2222
	 -->
	<bean id ="lee" class="com.test02.Address">
		<constructor-arg name="name" value="이순신"></constructor-arg>
		<constructor-arg name="addr" value="서울시 강남구"></constructor-arg>
		<constructor-arg name="phone" value="010-111-1111"></constructor-arg>
	</bean>
	<bean id ="hong" class="com.test02.Address">
		<constructor-arg value="홍길동"></constructor-arg>
		<constructor-arg value="경기도 수원시"></constructor-arg>
		<constructor-arg value="010-222-2222"></constructor-arg>
	</bean>
</beans>
